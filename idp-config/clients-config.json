      "RequirePkce": false,
      "AllowOfflineAccess": true,
      "AllowedScopes": ["openapi", "openid", "email", "operate-scope"],
      "ClientClaimsPrefix": "",
      "Claims": [
        {
          "Type": "string_claim",
          "Value": "string_claim_value",
