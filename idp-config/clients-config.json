      "ClientClaimsPrefix": "",
      "Claims": [
        {
          "Type": "string_claim",
          "Value": "string_claim_value",
          "ValueType": "string"
        },
        {
          "Type": "json_claim",
          "Value": "[\"value1\", \"value2\"]",
          "ValueType": "json"
        } 
      ],
      "IdentityTokenLifetime": 7200,
